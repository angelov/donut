<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SocNet\Movies\Movie" table="movie">

    <id name="id" type="guid" column="id"/>

    <field name="title" type="string" column="title" precision="0" scale="0" nullable="false"/>
    <field name="year" type="integer" column="year" precision="0" scale="0" nullable="false"/>
    <field name="plot" type="string" column="plot" precision="0" scale="0" nullable="false"/>
    <field name="poster" type="string" column="poster" precision="0" scale="0" nullable="false"/>

    <many-to-many field="genres" target-entity="SocNet\Movies\Genre" inversed-by="movies" fetch="LAZY">
      <join-table name="movie_has_genre">
        <join-columns>
          <join-column name="movie_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="genre_id" referenced-column-name="id" nullable="1"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>

  </entity>
</doctrine-mapping>
