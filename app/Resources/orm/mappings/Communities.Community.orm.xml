<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SocNet\Communities\Community" table="community">

    <id name="id" type="guid" column="id"/>

    <field name="name" type="string" column="name" precision="0" scale="0" nullable="false"/>
    <field name="description" type="string" column="description" precision="0" scale="0" nullable="true"/>
    <field name="createdAt" type="datetime" column="created_at" precision="0" scale="0" nullable="false"/>

    <many-to-one field="author" target-entity="SocNet\Users\User" fetch="EAGER">
      <cascade>
        <cascade-remove/>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="author_id" referenced-column-name="id" nullable=""/>
      </join-columns>
    </many-to-one>

    <many-to-many field="members" target-entity="SocNet\Users\User" fetch="LAZY">
      <join-table name="community_member">
        <join-columns>
          <join-column name="community_id" referenced-column-name="id" on-delete="CASCADE"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>

  </entity>
</doctrine-mapping>
