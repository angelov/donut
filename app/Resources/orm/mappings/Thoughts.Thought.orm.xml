<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SocNet\Thoughts\Thought" table="thought">

    <id name="id" type="guid" column="id"/>

    <field name="content" type="string" column="content" precision="0" scale="0" nullable="false"/>
    <field name="createdAt" type="datetime" column="created_at" precision="0" scale="0" nullable="false"/>

    <many-to-one field="author" target-entity="SocNet\Users\User" inversed-by="thoughts" fetch="EAGER">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="author_id" referenced-column-name="id" on-delete="CASCADE" nullable=""/>
      </join-columns>
    </many-to-one>

  </entity>
</doctrine-mapping>
