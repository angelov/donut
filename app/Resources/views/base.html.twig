<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        {% endblock %}

    </head>
    <body>

        <div class="container">

            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">
                            SocNet
                        </a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li><a href="{{ path('app.thoughts.index') }}">Thoughts</a></li>
                            <li><a href="{{ path('app.users.index') }}">People</a></li>
                            <li><a href="#">Messages</a></li>
                            <li><a href="{{ path('app.communities.index') }}">Communities</a></li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">

                            {% if is_granted('ROLE_USER')  %}

                                <li><a href="{{ path('app.users.show', {id: app.user.id}) }}">{{ app.user.name }}</a></li>

                                <li><a href="#">Profile</a></li>
                                <li><a href="{{ path('app.friends.index') }}">Friends</a></li>
                                <li><a href="{{ path('security_logout') }}">Logout</a></li>

                            {% else %}

                                <li><a href="{{ path('security_login') }}">Login</a></li>

                            {% endif %}

                        </ul>
                    </div>

                </div>

            </div>

            <div class="row" style="margin-top: 60px;">
                <div class="col-md-12">
                    {% block body %}{% endblock %}
                </div>
            </div>

        </div> <!-- /container -->

        {% block javascripts %}
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
