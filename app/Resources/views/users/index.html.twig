{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-5">
            <h1>People</h1>

            <ul class="list-group">

                {% for user in users %}

                    <li class="list-group-item">

                        <div class="row">
                            <div class="col-md-8">
                                <strong>{{ user.name }}</strong> <small>{{ user.email }}</small>
                                <br />

                                <span class="badge">{{ user.thoughts | length }} thoughs</span>
                                <span class="badge">32 friends</span>
                            </div>

                            <div class="col-md-4 text-right">
                                <a href="" class="btn btn-default">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    Add friend
                                </a>
                            </div>
                        </div>

                    </li>

                {% endfor %}

            </ul>
        </div>
    </div>

{% endblock %}
